<section data-section-id="desplegable" id="desplegable" class="desplegable">
    {% for block in section.blocks %}
      {% case block.type %}
   
          {% when 'summary' %}
            <div class="about-content">
              <div class="title">{{ block.settings.subtitle }}</div>
              <div class="title-seccion big">{{ block.settings.title }}</div>
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | img_url: 'master' }}" alt="Image">
              {% endif %}
            </div>  
      {% endcase %}
    {% endfor %}
  </section>
  {% schema %}
  {
    "name": "About",
    "blocks": [
      {
        "type": "summary",
        "name": "Content",
        "settings": [
          {
            "type": "richtext",
            "id": "subtitle",
            "label": "Title"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "richtext",
            "id": "title",
            "label": "Description"
          }
        ]
        }
    ],
    "presets": [
      {
        "name": "About"
      }
    ]
  }
  {% endschema %}
  