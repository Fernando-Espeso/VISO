<section
  data-section-id="stocklist"
  id="stocklist"
  class="stocklist"
>
  {% for block in section.blocks %}
    {% case block.type %}
        {% when 'summary' %}
        {% unless block.settings.subtitle and block.settings.interior  == blank %}
          <details>
            <summary>{{ block.settings.subtitle }}</summary>
            <div class="interior">{{ block.settings.interior }}</div>
          </details>
        {% endunless %}
    {% endcase %}
  {% endfor %}
</section>
{% schema %}
{
  "name": "Stockist",
  "blocks": [
    {
      "type": "summary",
      "name": "Stockist",
      "settings": [
        {
          "type": "richtext",
          "id": "Name",
          "label": "Subtitle"
        },
        {
          "type": "richtext",
          "id": "Location",
          "label": "Interior"
        }
      ]
    }
  ],
  "presets": [
  {
    "name": "Stockist"
  }
]
}
{% endschema %}
