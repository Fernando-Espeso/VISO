<div class="main-product" data-section-id="{{ section.id }}" data-product-section>
  <!--GALLERY-->
  <div class="product_gallery">
    {% for media in product.media %}
    {% case media.media_type %}
    {% when 'video' %}
    {{ media | video_tag:loop: true, autoplay: true, muted:true}}
    {% endcase %}
    {% case media.media_type %}
    {% when 'image' %}
    <img class="lazy" src="{{ media | product_img_url: 'thumb' }}" data-src="{{ media | product_img_url: 'master' }}" alt="{{ media.alt }}"/>
    {% endcase %}
    {% endfor %}
  </div>
  <!--INFO-BUY-->
  <div class="buy-block">
    <form id="product-actions" action="/cart/add" method="post" enctype="multipart/form-data"
      {%- if product.has_only_default_variant -%}
      class="product-simple"
      {%- else -%}
      class="product-variants"
      {%- endif -%}>
  
      <div id="bag">
          <div class="product-title">
              <!-- Product Title -->
              <a href="{{ product.url }}">{{ product.title }}</a>
  
              <!-- Product Price -->
              <div class="product-price" id="product-price">
                  {% if product.compare_at_price > product.price %}
                      <span class="sale-price">{{ product.price | money }}</span>
                      <span class="compare-at-price">{{ product.compare_at_price | money }}</span>
                  {% else %}
                      <span class="regular-price">{{ product.price | money }}</span>
                  {% endif %}
              </div>
  
              <!-- Sale/Availability Message -->
              {% if product.available %}
              {% else %}
                  <div class="sold-out">Sold Out</div>
              {% endif %}
          </div>
  
          <div class="variations">
              <!-- Variant Selector -->
              <select id="product-select" name="id">
                  {% for variant in product.variants %}
                      <option value="{{ variant.id }}">
                          {{ variant.title }}
                      </option>
                  {% endfor %}
              </select>
  
              <!-- Add to Cart Button -->
              {% if product.available %}
                  <button id="add-to-cart" type="submit" name="add">ADD TO CART</button>
              {% else %}
                  <button id="add-to-cart" type="submit" disabled>OUT OF STOCK</button>
              {% endif %}
          </div>
      </div>
  </form>
  
  
      <div class="information">
        <a href="mailto:">Contact us</a> if your size is sold out or you have any questions.
        Many of our products will be made to order, please allow up to two weeks.
      </div>
      <a class="size-guide" href="../pages/size-guide">Size guide</a>
 </div>
  <div class="info-product-piece">
    <p>{{ product.description }}</p>
  </div>
</div>
