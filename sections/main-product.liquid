  margin-top: 2px;
}
.section-title{
  margin-top: 0px;
  margin-bottom: 0px;
  top: 34px;
  position: sticky;
  grid-column: span 2;
}
.intro{
  margin-top:20px;
  margin-bottom:20px;
grid-column:span 2;}
.aim {
  padding: 20px 200px;
  grid-column: span 2!important;
  font-size: var(--big);
  line-height: calc(var(--big) + 5px);
}


