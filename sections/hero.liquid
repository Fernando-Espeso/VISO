<section
  data-section-id="{{ section.id }}"
  id="section-{{ section.id }}"
  class="hero-section deskt"
>
  {% for block in section.blocks %}
    
    {% case block.type %}
      {% when 'media' %}
        <div id="block-{{ block.id }}" class="hero__image">
          {% unless block.settings.link-hero == blank %}
            <a href="{{ block.settings.link-hero }}" class="hero__image-link">
          {% endunless %}
          
          {% if block.settings.video_url != blank %}
            <video autoplay loop muted playsinline class="hero__video">
              <source src="{{ block.settings.video_url }}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          {% elsif block.settings.image != blank %}
            {{
              block.settings.image
              | image_url: width: block.settings.image.width
              | image_tag: loading: 'lazy', alt: block.settings.image.alt, class: ''
            }}
          {% endif %}
        
          {% unless block.settings.link-hero == blank %}
            </a>
          {% endunless %}
        </div>
        
        {% unless block.settings.heading == blank and block.settings.button_label == blank %}
          <div class="bar">
            {% unless block.settings.button_link == blank %}
              <a class="" href="{{ block.settings.button_link }}" alt="{{ block.settings.button_label }}">
            {% endunless %}
            <div class="bar-content">
              <div>
                {% unless block.settings.heading == blank %}
                  {{ block.settings.heading }}
                {% endunless %}
              </div>
              <div class="mobile-hidden">
                {% unless block.settings.button_label == blank %}
                  <a class="btn" href="{{ block.settings.button_link }}" alt="{{ block.settings.button_label }}">
                    {{- block.settings.button_label -}}
                  </a>
                {% endunless %}
              </div>
            </div>
          </div>
        {% endunless %}

      {% unless block.settings.hero-text == blank %}
        <div class="caption">{{ block.settings.hero-text }}</div>
      {% endunless %}
    
    {% endcase %}
  {% endfor %}
</section>

{% schema %}
{
  "name": "Hero",
  "blocks": [
    {
      "type": "media",
      "name": "Media",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Used as poster image when video is provided"
        },
        {
          "type": "url",
          "id": "video_url",
          "label": "Video URL",
          "info": "Upload your video to Shopify and paste the file URL here."
        },
        {
          "type": "richtext",
          "id": "hero-text",
          "label": "hero-text"
        },
        {
          "type": "url",
          "id": "link-hero",
          "label": "link-hero"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Image"
    }
  ]
}
{% endschema %}

<style>
.hero__image {
  position: relative;
  width: 100%;
  height: 100vh; /* Mantiene la altura fija y evita cambios inesperados */
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden; /* Evita que el video sobresalga */
}

.hero-video {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  object-fit: cover; /* Ajusta el video sin distorsionarlo */
  transform: translate(-50%, -50%);
  z-index: -1; /* Mantiene el video en el fondo */
}

.hero__image img {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transform: translate(-50%, -50%);
  z-index: -2; /* Imagen de respaldo detrás del video */
}

.caption {
  position: absolute;
  bottom: 10%; /* Ajusta la posición para evitar superposición */
  left: 50%;
  transform: translateX(-50%);
  color: white;
  background: rgba(0, 0, 0, 0.5); /* Mejora la visibilidad del texto */
  padding: 10px 20px;
  text-align: center;
  border-radius: 5px;
  z-index: 2; /* Asegura que el caption esté por encima del video */
}

.bar {
  position: absolute;
  bottom: 5%;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;
}

/* Asegura que el siguiente contenido no desaparezca */
.hero-section {
  position: relative;
  z-index: 1;
}
</style>
