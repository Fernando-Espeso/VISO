<section
  data-section-id="{{ section.id }}"
  id="section-{{ section.id }}"
  class="hero-section deskt"
>
  {% for block in section.blocks %}
    
    {% case block.type %}
      {% when 'media' %}
        <div id="block-{{ block.id }}" class="hero__image">
          {% unless block.settings.link-hero == blank %}
            <a href="{{ block.settings.link-hero }}" class="hero__image-link">
          {% endunless %}
          
          {% if block.settings.video_url != blank %}
            <video autoplay loop muted playsinline class="hero__video">
              <source src="{{ block.settings.video_url }}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          {% elsif block.settings.image != blank %}
            {{
              block.settings.image
              | image_url: width: block.settings.image.width
              | image_tag: loading: 'lazy', alt: block.settings.image.alt, class: ''
            }}
          {% endif %}
        
          {% unless block.settings.link-hero == blank %}
            </a>
          {% endunless %}
        </div>
        
        {% unless block.settings.heading == blank and block.settings.button_label == blank %}
          <div class="bar">
            {% unless block.settings.button_link == blank %}
              <a class="" href="{{ block.settings.button_link }}" alt="{{ block.settings.button_label }}">
            {% endunless %}
            <div class="bar-content">
              <div>
                {% unless block.settings.heading == blank %}
                  {{ block.settings.heading }}
                {% endunless %}
              </div>
              <div class="mobile-hidden">
                {% unless block.settings.button_label == blank %}
                  <a class="btn" href="{{ block.settings.button_link }}" alt="{{ block.settings.button_label }}">
                    {{- block.settings.button_label -}}
                  </a>
                {% endunless %}
              </div>
            </div>
          </div>
        {% endunless %}

      {% unless block.settings.hero-text == blank %}
        <div class="caption">{{ block.settings.hero-text }}</div>
      {% endunless %}
    
    {% endcase %}
  {% endfor %}
</section>

{% schema %}
{
  "name": "Hero",
  "blocks": [
    {
      "type": "media",
      "name": "Media",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Used as poster image when video is provided"
        },
        {
          "type": "url",
          "id": "video_url",
          "label": "Video URL",
          "info": "Upload your video to Shopify and paste the file URL here."
        },
        {
          "type": "richtext",
          "id": "hero-text",
          "label": "hero-text"
        },
        {
          "type": "url",
          "id": "link-hero",
          "label": "link-hero"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Image"
    }
  ]
}
{% endschema %}

<style>
  .hero-video {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  object-fit: content; /* Ajusta el video sin distorsionarlo */
  transform: translate(-50%, -50%);
}
.hero__image {
  position: relative;
  width: 100%;
  height: 100vh; /* Ajusta el alto al 100% del viewport */
  overflow: hidden;
}
</style>
