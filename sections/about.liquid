<section data-section-id="desplegable" id="desplegable" class="desplegable">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'text' %}
          <div data-section="" id="block-{{ block.id }}" class="ask">
            {% unless block.settings.title == blank %}
              <div class="title-seccion big">{{ block.settings.title }}</div>
            {% endunless %}
          </div>
        {% when 'summary' %}
        {% unless block.settings.subtitle and block.settings.interior == blank %}
          <div class="news-content">
            <div class="view">{{ block.settings.subtitle }}</div>
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | img_url: 'master' }}" alt="Image">
            {% endif %}
            <div class="title-seccion big">{{ block.settings.interior }}</div>
          </div>
        {% endunless %}
    {% endcase %}
  {% endfor %}
</section>
{% schema %}
{
  "name": "News",
  "blocks": [
    {
      "type": "text",
      "name": "Title",
      "settings": [
        {
          "type": "richtext",
          "id": "title",
          "label": "Title"
        }
      ]
    },
    {
      "type": "summary",
      "name": "Content",
      "settings": [
        {
          "type": "richtext",
          "id": "subtitle",
          "label": "Subtitle"
        },
        {
          "type": "richtext",
          "id": "interior",
          "label": "Interior"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "INFO-BLOCK"
    }
  ]
}
{% endschema %}
