<div id="content">
  <div class="ab">
    <div class="add_row">
      <div class="row">
              <div class="product-title">
                {{ product.title}}
              </div>
              <div id="product-price"></div>

<div class="product-price-wrap">
    {% if product.available %}
        {% if product.price_varies %}
            <!-- Logic for variable price products -->
            <span class="price">{{ product.price_min | money }} - {{ product.price_max | money }}</span>
        {% else %}
            <!-- Single price product -->
            {% if product.compare_at_price > product.price %}
                <!-- Product is on sale -->
                <span class="red">ON SALE</span>
                <span class="price">{{ product.price | money }}</span>
                <span class="compare-price">{{ product.compare_at_price | money }}</span>
            {% else %}
                <!-- Regular priced product -->
                <span class="price">{{ product.price | money }}</span>
            {% endif %}
        {% endif %}
    {% else %}
        <!-- Product is not available -->
        <span class="sold-out">SOLD OUT</span>
    {% endif %}
</div>
                <div class="add_item">
                      <!--Product Info-->
                      <form id="product-actions" action="/cart/add" method="post" enctype="multipart/form-data"
                                {%- if product.has_only_default_variant -%}
                                class="product-simple"
                                {%- elsif variants > 0 -%}
                                class="product-variants"
                                {%- endif -%}>

                                <div id="bag-total" >
                                    <!--Variations Dropdown-->
                                    {% if product.variants.size > 1 %}
                                      <select class="product-variant-selector">
                                      {% for variant in product.variants %}
                                        {% unless variant.title == "Default Title" %}
                                          <option value="{{ variant.id }}">{{ variant.title }}</option>
                                        {% endunless %}
                                      {% endfor %}
                                      </select>
                                    {% endif %}

                                  <!--Actions-->
                                  {% if product.available %}
                                  <button   {% if product.available %} onclick="ShowSecond()" {% endif %}  id="add-to-cart" {% unless product.available %}disabled{% endunless %} type="submit" name="add">
                                    ADD TO BAG
                                  </button> 
                                  {% else %}
                                    <button  id="add-to-cart" {% unless product.selected_variant.available %}disabled{% endunless %}>
                                  SOLD OUT
                                  </button> 
                                  {% endif %}
                                  </div>
                
                      </form>

                </div> 
       </div>         
    </div>
  </div>
  <div class="product-description">
    {{ product.content}}
  </div>
  <div class="product-gallery">
  {% for media in product.media %}
      <img class="lazy" src="{{ media | product_img_url: 'thumb' }}" data-src="{{ media | product_img_url: 'master' }}" alt="{{ media.alt }}"/>
  {% endfor %}
  </div>
  <div class="cont_2">
    {{ product.content | replace: '_16x16', '' | replace: '_32x32', '' | replace: '_50x50', '' | replace: '_100x100', '' | replace: '_160x160', '' | replace: '_240x240', '' | replace: '_480x480', '' | replace: '_600x600', '' | replace: '_1024x1024', '' }}
  </div>
</div>
