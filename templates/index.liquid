<script>
  $(document).ready(function () {
    const lastVisit = localStorage.getItem("lastVisit");
    const oneDay = 24 * 60 * 60 * 1000;
    const now = new Date().getTime();
  
    if (lastVisit && now - lastVisit < oneDay) {
      $("#free-shipping").hide();
      $("#cookies").hide();
    } else {
      localStorage.setItem("lastVisit", now);
    }
  });
</script>